// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
    "theme": "macOS Classic Dark",
    "auto_update": false,
    "ui_font_size": 16,
    "buffer_font_size": 16,
    "buffer_line_height": { "custom": 1.4 },
    "toolbar": { "breadcrumbs": false, "quick_actions": false },
    "project_panel": { "entry_spacing": "standard" },
    "tabs": { "file_icons": true },
    "git": {
        "git_gutter": "tracked_files",
        "inline_blame": { "enabled": false }
    },
    "tab_size": 4,
    "hard_tabs": false,
    "cursor_blink": false,
    "preferred_line_length": 90,
    "soft_wrap": "editor_width",
    "format_on_save": "on",
    "ui_font_family": "Roboto Mono",
    "buffer_font_family": "Roboto Mono",
    "base_keymap": "JetBrains",
    "diagnostics": {
        "inline": {
            "enabled": true
        }
    },
    "telemetry": {
        "metrics": false,
        "diagnostics": false
    },
    "indent_guides": {
        "enabled": true,
        "coloring": "indent_aware"
    },
    "wrap_guides": [90],
    "show_wrap_guides": true,
    "tab_bar": {
        "show": true
    },
    "scrollbar": {
        "show": "never"
    },
    "buffer_font_features": {
        "calt": false
    },
    "autosave": {
        "after_delay": {
            "milliseconds": 30000
        }
    }
}
